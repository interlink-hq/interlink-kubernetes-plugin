{
    "version": "0.2.0",
    "configurations": [
        // Launch configurations
        {
            "name": "[interlink-kubernetes-plugin] Launch app.server (TCP socket)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.server",
            "args": [],
            "env": {
                "APP_SOCKET_ADDRESS": "http://0.0.0.0",
                "APP_SOCKET_PORT": "30400",
                "UVICORN_RELOAD": "true"
            },
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src",
        },
        {
            "name": "[interlink-kubernetes-plugin] Launch app.server (Unix socket)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.server",
            "args": [],
            "env": {
                "APP_SOCKET_ADDRESS": "unix:///root/sockets/.plugin.sock",
                "APP_SOCKET_PORT": "0",
                "UVICORN_RELOAD": "true"
            },
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src",
        },        
        {
            "name": "[interlink-kubernetes-plugin] Launch FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=30400",
                "--log-level=debug"
            ],
            "env": {},
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src",
        },
        // Pytest
        {
            "name": "[interlink-kubernetes-plugin] Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-x", // stop after 1 failure
                // "-c=/mk/pytest.ini",
                "--verbose",
                "--log-level=INFO",
                "--log-cli-level=INFO"
            ],    
            "cwd": "${workspaceFolder}/test",
            "env": {
                // Note: test modules to be resolved via "test.", so don't append: ":${workspaceFolder}/test"
                "PYTHONPATH": "$PYTHONPATH:${workspaceFolder}/src",
            },
            // Note: 'envFile' is redundant as .env file is automatically loaded
            // "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
    ]
}
